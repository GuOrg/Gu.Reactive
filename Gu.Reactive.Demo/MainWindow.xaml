<Window x:Class="Gu.Reactive.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Reactive.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance demo:ViewModel}"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="281*" />
        </Grid.RowDefinitions>
        <ToggleButton Grid.Row="0"
                      Content="Criteria"
                      IsChecked="{Binding IsOk}" />
        <GroupBox Grid.Row="1" Header="Condition">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Ellipse Width="16"
                             Height="16"
                             VerticalAlignment="Top">
                        <Ellipse.Style>
                            <Style TargetType="{x:Type Ellipse}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Condition.IsSatisfied}" Value="True">
                                        <Setter Property="Fill" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Condition.IsSatisfied}" Value="False">
                                        <Setter Property="Fill" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Condition.IsSatisfied}" Value="{x:Null}">
                                        <Setter Property="Fill" Value="Gray" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Top"
                               Text="{Binding Condition.Name}" />
                </Grid>
                <ListBox Grid.Column="1" ItemsSource="{Binding Condition.History}" />
            </Grid>

        </GroupBox>
    </Grid>
</Window>
