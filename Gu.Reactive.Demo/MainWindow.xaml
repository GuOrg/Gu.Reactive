<Window x:Class="Gu.Reactive.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Gu.Reactive.Demo"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:reactive="clr-namespace:Gu.Reactive;assembly=Gu.Reactive"
        xmlns:reactiveUi="clr-namespace:Gu.Wpf.Reactive;assembly=Gu.Wpf.Reactive"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance demo:ViewModel,
                                         IsDesignTimeCreatable=True}"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ToggleButton Grid.Column="0"
                          Margin="7"
                          Content="Criteria 1"
                          IsChecked="{Binding IsOk1}" />
            <ToggleButton Grid.Column="1"
                          Margin="7"
                          Content="Criteria 2"
                          IsChecked="{Binding IsOk2}" />
        </Grid>
        <!--  <reactiveUi:ConditionControl Grid.Row="1" Condition="{Binding Condition1}" />  -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Conditions}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type reactive:ICondition}">
                    <reactiveUi:ConditionControl Condition="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Height" Value="100" />
                    <Setter Property="Width" Value="100" />
                    <Setter Property="Margin" Value="5,10,5,10" />
                    <!--
                        <Setter Property="reactiveUi:DisabledInfoBehavior.Adorner">
                        <Setter.Value>
                        <Grid>
                        <Border Width="20"
                        Height="20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="CornflowerBlue"
                        CornerRadius="10">
                        <TextBlock HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="i" />
                        </Border>
                        </Grid>
                        </Setter.Value>
                        </Setter>
                    -->

                    <!--
                        <Setter Property="i:Interaction.Behaviors">
                        <Setter.Value>
                        <reactiveUi:DisabledInfoBehavior />
                        </Setter.Value>
                        </Setter>
                    -->



                </Style>
            </StackPanel.Resources>
            <Button x:Name="OtherButton"
                    Command="{Binding OtherCommand}"
                    CommandParameter="{Binding Content,
                                               RelativeSource={RelativeSource Self}}"
                    Content="Other" />

            <AdornerDecorator>
                <Button Command="{Binding StartCommand}"
                        CommandParameter="{Binding Content,
                                                   RelativeSource={RelativeSource Self}}"
                        Content="Start">
                    <i:Interaction.Behaviors>
                        <reactiveUi:DisabledInfoBehavior>
                            <!--
                                <reactiveUi:DisabledInfoBehavior.Adorner>
                                <Grid Background="Transparent">
                                <Border Width="20"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="CornflowerBlue"
                                CornerRadius="10">
                                <TextBlock HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Text="i" />
                                </Border>
                                </Grid>
                                </reactiveUi:DisabledInfoBehavior.Adorner>
                            -->
                        </reactiveUi:DisabledInfoBehavior>
                    </i:Interaction.Behaviors>
                </Button>
            </AdornerDecorator>
        </StackPanel>
    </Grid>
</Window>
