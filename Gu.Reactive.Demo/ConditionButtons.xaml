<UserControl x:Class="Gu.Reactive.Demo.ConditionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:demo="clr-namespace:Gu.Reactive.Demo"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:reactive="clr-namespace:Gu.Wpf.Reactive;assembly=Gu.Wpf.Reactive"
             xmlns:toolTips="clr-namespace:Gu.Wpf.ToolTips;assembly=Gu.Wpf.ToolTips"
             d:DataContext="{d:DesignInstance demo:MainWindowViewModel}"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ButtonWithCommandToolTipStyle"
               BasedOn="{StaticResource LocalInfoButtonStyle}"
               TargetType="{x:Type Button}">
            <Setter Property="toolTips:TouchToolTipService.ToolTip">
                <Setter.Value>
                    <reactive:ConditionToolTip />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <AdornerDecorator>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Text="Mouseover and touch" />
            <Button Command="{Binding OtherCommand}"
                    CommandParameter="{Binding Content,
                                               RelativeSource={RelativeSource Self}}"
                    Content="Other"
                    Style="{StaticResource LocalInfoButtonStyle}"
                    ToolTipService.ShowOnDisabled="True">
                <toolTips:TouchToolTipService.ToolTip>
                    <reactive:ConditionToolTip />
                </toolTips:TouchToolTipService.ToolTip>
            </Button>

            <TextBlock HorizontalAlignment="Center" Text="Mouseover" />
            <Ellipse Width="50"
                     Height="50"
                     Fill="{Binding OtherCommand.Condition.IsSatisfied,
                                    Converter={reactive:BooleanToBrushConverter WhenTrue=GreenYellow,
                                                                                WhenFalse=Red,
                                                                                WhenNull=Gray}}"
                     toolTips:TouchToolTipService.IsOverlayVisible="False">
                <toolTips:TouchToolTipService.ToolTip>
                    <reactive:ConditionToolTip Condition="{reactive:NinjaBinding {Binding OtherCommand.Condition}}" InferConditionFromCommand="False">
                        <TextBlock Text="Tool tip text" />
                    </reactive:ConditionToolTip>
                </toolTips:TouchToolTipService.ToolTip>
            </Ellipse>

            <TextBlock HorizontalAlignment="Center" Text="Mouseover and touch" />
            <Ellipse Width="50"
                     Height="50"
                     Fill="{Binding OtherCommand.Condition.IsSatisfied,
                                    Converter={reactive:BooleanToBrushConverter WhenTrue=GreenYellow,
                                                                                WhenFalse=Red,
                                                                                WhenNull=Gray}}"
                     toolTips:TouchToolTipService.IsOverlayVisible="True">
                <toolTips:TouchToolTipService.ToolTip>
                    <reactive:ConditionToolTip Condition="{reactive:NinjaBinding {Binding OtherCommand.Condition}}">
                        <TextBlock Text="Tool tip text" />
                    </reactive:ConditionToolTip>
                </toolTips:TouchToolTipService.ToolTip>
            </Ellipse>

            <TextBlock HorizontalAlignment="Center" Text="Touch only" />
            <Button Command="{Binding StartCommand}"
                    CommandParameter="{Binding Content,
                                               RelativeSource={RelativeSource Self}}"
                    Content="Start"
                    Style="{StaticResource LocalInfoButtonStyle}">
                <toolTips:TouchToolTipService.ToolTip>
                    <reactive:ConditionToolTip>
                        <TextBlock Text="Tool tip text" />
                    </reactive:ConditionToolTip>
                </toolTips:TouchToolTipService.ToolTip>
            </Button>

            <TextBlock HorizontalAlignment="Center" Text="From style 1" />
            <Button Command="{Binding OtherCommand}"
                    CommandParameter="{Binding Content,
                                               RelativeSource={RelativeSource Self}}"
                    Content="Other"
                    Style="{StaticResource ButtonWithCommandToolTipStyle}" />

            <TextBlock HorizontalAlignment="Center" Text="From style 2" />
            <Button Command="{Binding StartCommand}"
                    CommandParameter="{Binding Content,
                                               RelativeSource={RelativeSource Self}}"
                    Content="Start"
                    Style="{StaticResource ButtonWithCommandToolTipStyle}" />
        </StackPanel>
    </AdornerDecorator>
</UserControl>
